{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment
    "target": "ES2020",                 // stable modern JS
    "module": "NodeNext",               // for ESM in Node.js
    "moduleResolution": "NodeNext",     // important for resolving packages
    "lib": ["ES2020"],

    // Node types
    "types": ["node"],

    // Interop
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Type Safety
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // JSX if needed
    "jsx": "react-jsx"
  }
}
